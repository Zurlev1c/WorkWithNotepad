  //Ограничение тобы не прокучивалось
  ПоддержкаПользователейПланировщик.НачалоПериодаОтображения = ТекущаяДата();
	ПоддержкаПользователейПланировщик.КонецПериодаОтображения = ТекущаяДата();
  //Добавляем измерение
	ДобавитьИзмерения  = ПоддержкаПользователейПланировщик.Измерения.Добавить("Дни");
	
  //создание дней до
	Для Счетчик = 1 по 10 цикл
		
		НовыйДень = ДобавитьИзмерения.Элементы.Добавить(Строка(Формат(ТекущаяДата()-(11-Счетчик)*24*60*60,"ДФ='ддд, дд ММММ'")));
		
		
	КонецЦикла;
	/создание текущего дня
	НовыйДень = ДобавитьИзмерения.Элементы.Добавить(Строка(Формат(ТекущаяДата(),"ДФ='ддд, дд ММММ'")));
	//создание следуйщих 10 дней
	Для Счетчик = 1 По 10 Цикл
		
		НовыйДень = ДобавитьИзмерения.Элементы.Добавить(Строка(Формат(ТекущаяДата()+Счетчик*24*60*60,"ДФ='ддд, дд ММММ'")))
		
	КонецЦикла;
	
  //выводим элементы из документов
	Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ
	               |	Заявки.Номер КАК Номер,
	               |	Заявки.Дата КАК Дата,
	               |	Заявки.Статус КАК Статус,
	               |	Заявки.ДатаЗакрытия КАК ДатаЗакрытия
	               |ИЗ
	               |	Документ.Заявки КАК Заявки";
	
	Выборка = Запрос.Выполнить().Выбрать();
	Пока Выборка.Следующий() цикл 
		
    //делаем соответствие чтоы записовалось в те дни которые указано
		Соответствие = Новый Соответствие;
		Соответствие.Вставить("Дни",Формат(Выборка.Дата,"ДФ='ддд, дд ММММ'"));
		//время начала и конца элемента     //часы                                      //минуты
		Начало = НачалоДня(ТекущаяДата()) + Число(Формат(Выборка.Дата,"ДФ=чч"))*60*60+Число(Формат(Выборка.Дата,"ДФ=мм"))*60;  		
		Конец = НачалоДня(ТекущаяДата()) + Число(Формат(Выборка.ДатаЗакрытия,"ДФ=чч"))*60*60+Число(Формат(Выборка.ДатаЗакрытия,"ДФ=мм"))*60;
		//создание элемента
		НовыйЭлемент = ПоддержкаПользователейПланировщик.Элементы.Добавить(Начало,Конец);
		НовыйЭлемент.ЗначенияИзмерений = Новый ФиксированноеСоответствие(Соответствие);
		НовыйЭлемент.Текст = Строка(Выборка.Статус);
		
	КонецЦикла;
